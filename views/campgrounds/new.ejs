<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Create a New Campground</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" id="name" type="text" name="name">
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" id="price" type="number" name="price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" id="location" type="text" name="location">
            </div>
            <div class="form-group">
                <label for="web">Website</label>
                <input class="form-control" id="web" type="text" name="web">
            </div>
            <div class="form-group">
                <label for="image">Image Url</label>
                <input class="form-control" id="image" type="text" name="image">
            </div>
            <div class="form-group">
                <label for="desc">Description</label>
                <textarea class="form-control" id="desc" name="description" rows="3"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Back</a>
    </div>
</div>

<% include ../partials/footer %>